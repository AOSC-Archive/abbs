#! /bin/bash
. $ABBS/env/base.sh
TMPF1="`abbstmpf`"
TMPF2="`abbstmpf`"
abbscheckspec $1
for i in $ABBS/repo/$1/*
do
	[ ! -d "$i" ] && continue
	. $i/defines
	for j in $PKGDEP
	do
		echo $j >> $TMPF1
	done
	cat $TMPF1 | sort | uniq > $TMPF2
	cat $TMPF2 > $TMPF1
done
RES="`cat $TMPF1`"
echo $RES
rm -f $TMPF1 $TMPF2
