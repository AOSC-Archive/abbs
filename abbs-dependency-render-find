#! /usr/bin/abbl-invoke
if [ "$REPO" ]; then
	cd "REPO"
else
	cd $(cat /etc/abbs/prefix)/repo
fi
function printdep(){
	if [ "$(sqlite3 abbs.db 'select dependee from dependencies where depender='"'$1'")" ]; then
		echo "$2$1"
		for i in $(sqlite3 abbs.db 'select dependee from dependencies where depender='"'$1'")
		do
			printdep $i "$2$1->" 
		done
	else
		echo "$2$1"
	fi
}
for i
do
	printdep $i
done
