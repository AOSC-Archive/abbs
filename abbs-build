#! /bin/bash

export ABBS=`cat /etc/abbs/prefix`
. $ABBS/env/base.sh

for i
do
	if echo $i | grep -q ^groups/
	then
		L+=" $(cat $ABBS/repo/$i)"
	else
		if [[ "$i" != */* ]]; then
			f="$(find $ABBS/repo/ -maxdepth 2 -name $i)"
			if [ -z "$f" ]; then
				exit 1
			fi
			d=`dirname $f`
			i=`basename $d`/`basename $f`
		fi
		L+=" $i"
	fi
done

exec $ABBS/abbs-build-mini $L
